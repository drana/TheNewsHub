<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_no_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:background="@color/primary_White">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
        android:id="@+id/tvArticleTitlePlain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/primary_text_black"
        android:layout_margin="@dimen/imgviewMargin"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"/>

        <TextView
        android:id="@+id/tvNewsDeskPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
            android:layout_margin="@dimen/imgviewMargin"
            android:textColor="@color/primary_text_black"
        android:textSize="@dimen/title_text_size"
        android:textStyle="normal"    />

        <TextView
        android:id="@+id/tvArticleSnippetPlain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
            android:layout_margin="@dimen/imgviewMargin"
            android:textColor="@color/secondary_text"
            android:ellipsize="end"
            android:maxLines="4"
        android:textSize="@dimen/title_text_size"
        android:textStyle="normal"    />

    </LinearLayout>

</android.support.v7.widget.CardView>